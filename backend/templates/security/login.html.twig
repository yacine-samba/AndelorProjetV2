{% extends 'base.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div>
            Vous êtes connecté avec l'adresse {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1>Veuillez vous connecter</h1>
    <label for="inputEmail">E-mail</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus><br><br>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" autocomplete="current-password" required><br><br>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button type="submit">
        Connexion
    </button>
</form>
{% endblock %}
